# Intelligent Office Access Management System Configuration
# Copy this file to .env and update the values as needed

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=False

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# Encryption Key (will be auto-generated if not provided)
ENCRYPTION_KEY=

# Camera Configuration
CAMERA_1_RTSP=0
CAMERA_2_RTSP=1
CAMERA_3_RTSP=rtsp://username:password@camera-ip:554/stream1
CAMERA_4_RTSP=rtsp://username:password@camera-ip:554/stream2

# Model Configuration
YOLO_MODEL_PATH=yolov8s.pt
CONFIDENCE_THRESHOLD=0.5
FACE_SIMILARITY_THRESHOLD=0.6
BODY_SIMILARITY_THRESHOLD=0.7

# System Configuration
MAX_WORKERS=4
HEALTH_CHECK_INTERVAL=30
FRAME_TIMEOUT=10
MAX_CONSECUTIVE_FAILURES=3

# Tailgating Detection
ENTRY_ZONE_THRESHOLD=0.3
TAILGATING_TIME_WINDOW=5.0
MIN_PERSONS_FOR_TAILGATING=2
TAILGATING_CONFIDENCE_THRESHOLD=0.7

# Access Control
ACCESS_TIMEOUT=30
EMPLOYEE_CACHE_TIMEOUT=300

# Logging
LOG_LEVEL=INFO
LOG_FILE=access_system.log

# Database Configuration
DB_HOST=localhost
DB_PORT=9200
DB_NAME=access_management
DB_USER=elastic
DB_PASSWORD=changeme

# Security
SSL_VERIFY=False
SSL_CERT_PATH=
SSL_KEY_PATH=

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
CORS_ORIGINS=*

# Monitoring
ENABLE_MONITORING=True
METRICS_INTERVAL=30
ALERT_EMAIL=admin@company.com
ALERT_WEBHOOK_URL=

# Development
DEMO_MODE=False
SAVE_FRAMES=False
FRAME_SAVE_INTERVAL=100 